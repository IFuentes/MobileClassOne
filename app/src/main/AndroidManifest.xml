<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ingfuentes.mobileclassone" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ingfuentes.mobileclassone.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ingfuentes.mobileclassone.NameActivity"
            android:label="@string/title_activity_name" >
        </activity>
        <activity
            android:name="com.example.ingfuentes.mobileclassone.SurnameActivity"
            android:label="@string/title_activity_surname" >
        </activity>
        <activity
            android:name="com.example.ingfuentes.mobileclassone.AgeActivity"
            android:label="@string/title_activity_age" >
        </activity>
        <activity
            android:name="com.example.ingfuentes.mobileclassone.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
    </application>

</manifest>
